<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head', { title: 'All Posts' }) %>
    <link rel="stylesheet" href="/styles/posts.css" />
  </head>

  <body>
    <%- include('includes/header') %>
    <main id="all-posts">
      <h1>All Posts</h1>
      <% if (!allPosts || allPosts.length === 0) { %>
      <p>No posts found.</p>
      <% } else { %>
      <ol id="posts-list">
        <% for(const iterator of allPosts) { %>
        <li><%- include("includes/post-item", { post: iterator }) %></li>
        <% } %>
      </ol>
      <% } %>
    </main>
  </body>
</html>
